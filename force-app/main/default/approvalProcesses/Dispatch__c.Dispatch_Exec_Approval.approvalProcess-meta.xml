<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>HO_Sales_Group</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Sales_Managers</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Accounts</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Asst_Manager_Commercial</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Dispatch_Warehouse__c</field>
        <field>Distributor__c</field>
        <field>Dealer__c</field>
        <field>Freight_Charge_Bearer__c</field>
        <field>Previous_Outstanding__c</field>
        <field>Dispatch_Total_Sq_mtr__c</field>
        <field>Dispatch_Credit_Amount__c</field>
        <field>Dispatch_Advance__c</field>
        <field>Dispatch_Total_Amount__c</field>
        <field>Distributor_Credit_Limit__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>maithili.appalwar@emmbi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>makrand.appalwar@emmbi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>munna.singh@emmbi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rinku.appalwar@emmbi.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>yash.punjabi@emmbi.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR 2</booleanFilter>
            <criteriaItems>
                <field>Dispatch__c.Previous_Outstanding__c</field>
                <operation>notEqual</operation>
                <value>0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Dispatch__c.Dispatch_Credit_Amount__c</field>
                <operation>notEqual</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Submit To Management</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>unfiled$public/JS_Dispatch_Exec_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>Dispatch__c.Status__c</field>
            <operation>equals</operation>
            <value>Exec Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Dispatch_Status_Updated_to_Next_Step</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Exec_Approval_field_updated_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Exec_Approval_field_to_Not_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Dispatch Exec Approval</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
