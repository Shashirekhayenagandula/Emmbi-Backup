<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(OR(ISBLANK( Driver_Phone_Number__c), REGEX( Driver_Phone_Number__c, &quot;^[0-9]{10}$&quot;)))</errorConditionFormula>
    <errorDisplayField>Driver_Phone_Number__c</errorDisplayField>
    <errorMessage>Enter a valid phone number</errorMessage>
</ValidationRule>
