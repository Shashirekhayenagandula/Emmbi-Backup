<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Number_10_digit_validation</fullName>
    <active>false</active>
    <errorConditionFormula>NOT(OR(ISBLANK(	Driver_Phone_Number__c), REGEX(	Driver_Phone_Number__c, &quot;^[0-9]{10}$&quot;)))</errorConditionFormula>
    <errorMessage>Phone number must be 10 digits long.</errorMessage>
</ValidationRule>
